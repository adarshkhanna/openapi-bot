{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Test security declaration"
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "security": [
    {
      "petstore_auth": [
        "write:pets",
        "read:pets"
      ]
    },
    {
      "api_key": []
    }
  ],
  "paths": {
    "/path": {
      "post": {
        "summary": "An operation that removes security",
        "description": "",
        "operationId": "removesSecurity",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": []
      },
      "put": {
        "summary": "An operation that overrides security",
        "description": "",
        "operationId": "updatesSecurity",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      },
      "get": {
        "summary": "An operation that uses top level security",
        "description": "",
        "operationId": "usesNormalSecurity",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  }
}