on intent GetContact do 
	val api = session.get("xatkit.plugins.openapi.api") as edu.uoc.som.openapi2.API
	if(api=== null){
		ReactPlatform.Reply("You need to load an API first")
		ReactPlatform.Reply("What is the URL of the API you want to know about?")
	} else {
		
		val contact = api.info.contact
		if(contact !== null){
			val name = contact.name
			val url = contact.url
			val email = contact.email
			if(!name.nullOrEmpty){
				ReactPlatform.Reply("The contact name is "+name)
			}	
			if(!url.nullOrEmpty){
				ReactPlatform.Reply("The contact URL is ["+url+"]("+url+")")
			}
			if(!email.nullOrEmpty){
				ReactPlatform.Reply("the contact email is ["+email+"](mailto:"+email+")")
			}
			}
			else {
				ReactPlatform.Reply("No contact info provided")
			}
		
		
	}

