on intent GetOperationDetailsUsingRowNumberAfterWhatCanIDo do 
		val api = session.get("xatkit.plugins.openapi.api") as edu.uoc.som.openapi2.API
	if(api === null){
		ReactPlatform.Reply("You need to load an API first")
		ReactPlatform.Reply("What is the URL of the API you want to know about?")
	} else {
		val rowNumber = Integer.valueOf(context.get("Operation").get("rowNumber") as String) 
		val operationList = session.get("xatkit.plugins.openapi.operation.list") as java.util.List<edu.uoc.som.openapi2.Operation>
		if(rowNumber > operationList.size || rowNumber < 1){
			ReactPlatform.Reply("Wrong row number")
		} else {
			//Display the details of an operation
			val operation = operationList.get(rowNumber - 1)
			ReactPlatform.Reply("`"+(operation.eContainer as edu.uoc.som.openapi2.Path).relativePath+"`: "+operation.getHTTPMethod()+" "+operation.getSummary()+" (`"+operation.getOperationId()+"`)")
			val parameters = operation.getParameters()
			val responses =  operation.responses
			if(parameters.isEmpty()){
				ReactPlatform.Reply("The operation does not declare any parameters")
			}
			else {
				if(parameters.size() == 1){
					ReactPlatform.Reply("The operation has "+parameters.size()+" parameter:")
				}
				else {
					ReactPlatform.Reply("The operation has "+parameters.size()+" parameters:")
				}
				val parameterItemize = ReactPlatform.ItemizeList(parameters)
				ReactPlatform.Reply(parameterItemize as String)
			}
			if(responses.isEmpty()){
				ReactPlatform.Reply("The operation does not declare any responses")
			}
			else {
				if(responses.size() == 1){
					ReactPlatform.Reply("It also has "+responses.size()+" response:")
				}
				else {
					ReactPlatform.Reply("It also has "+responses.size()+" responses:")
				}
			
				val responsesItemize = ReactPlatform.ItemizeList(responses)
				ReactPlatform.Reply(responsesItemize as String)
			}
		}
	}


